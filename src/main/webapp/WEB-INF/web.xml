<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

  <!-- Welcome file -->
  <welcome-file-list>
    <welcome-file>auth/login</welcome-file>
  </welcome-file-list>

  <!-- Servlets -->
  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.AuthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ComplaintServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.ComplaintServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ComplaintServlet</servlet-name>
    <url-pattern>/complaint</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AssignmentServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.AssignmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AssignmentServlet</servlet-name>
    <url-pattern>/assignment</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FeedbackServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.FeedbackServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FeedbackServlet</servlet-name>
    <url-pattern>/feedback</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ReportServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.ReportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReportServlet</servlet-name>
    <url-pattern>/report</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ExportServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.ExportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExportServlet</servlet-name>
    <url-pattern>/export</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FileServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.FileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileServlet</servlet-name>
    <url-pattern>/file</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/admin/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>NotificationServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.NotificationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NotificationServlet</servlet-name>
    <url-pattern>/notifications</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.DashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DashboardServlet</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ManagerServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.ManagerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ManagerServlet</servlet-name>
    <url-pattern>/manager</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MarketingServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.MarketingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MarketingServlet</servlet-name>
    <url-pattern>/marketing</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FinanceServlet</servlet-name>
    <servlet-class>lk.smartlanka.ccs.web.FinanceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FinanceServlet</servlet-name>
    <url-pattern>/finance</url-pattern>
  </servlet-mapping>

  <!-- Filter -->
  <filter>
    <filter-name>RbacFilter</filter-name>
    <filter-class>lk.smartlanka.ccs.web.filters.RbacFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RbacFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- Listener -->
  <listener>
    <listener-class>lk.smartlanka.ccs.listeners.StartupListener</listener-class>
  </listener>
</web-app>
